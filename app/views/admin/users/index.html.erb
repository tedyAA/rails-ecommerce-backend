<div class="w-full">
  <% if notice.present? %>
    <p id="notice" class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block">
      <%= notice %>
    </p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Users</h1>
  </div>

  <div class="flex mt-4 flex-col md:flex-row items-start md:items-center w-full">
    <%= form_with url: admin_users_path, method: :get, class: "flex" do |form| %>
      <%= form.text_field :query,
        placeholder: "Search by email or name",
        value: params[:query],
        class: "rounded border-gray-500 text-gray-800 px-2 py-1" %>

      <%= form.submit "Search",
        class: "cursor-pointer bg-gray-500 ml-2 hover:bg-gray-600 text-white py-2 px-4 rounded" %>

      <% if params[:query].present? %>
        <%= link_to "Clear",
          admin_users_path,
          class: "cursor-pointer bg-gray-400 ml-2 hover:bg-gray-500 text-white py-2 px-4 rounded" %>
      <% end %>
    <% end %>
  </div>

  <div class="flex flex-col w-full mt-4">
    <div class="overflow-x-auto">
      <table class="min-w-full border">
        <thead class="bg-white border-b">
          <tr>
            <% ["ID", "Email", "Name", "Created At"].each do |header| %>
              <th class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                <%= header %>
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |u| %>
            <tr class="bg-gray-50 border-b">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 underline">
                <%= u.id %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">
                <%= u.email %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">
                <%= u.respond_to?(:name) ? u.name : "-" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">
                <%= u.created_at.strftime("%Y-%m-%d %H:%M") %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
